@model User
<style>
    main {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 40px;
    }
</style>
<div class="card" style="width: 18rem;">
    @if (Model.ProfileImage != null)
    {
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfileImage)" alt="Profile Image" class="rounded">

    }
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Birth Date: @Model.BirthDate</li>
        <li class="list-group-item">Email: @Model.Email</li>
        <li class="list-group-item">Address: @Model.Address</li>
        <li class="list-group-item">Gender: @Model.Gender</li>
        <li class="list-group-item">Role: @Model.Role</li>
        @if (Model.Salary != null)
        {
            <li class="list-group-item">Salary: @Model.Salary</li>
        }
    </ul>
    <a href="#" class="btn btn-primary" style="text-decoration:none;margin:5px;">Show Posts</a>

    <a href="#" class="btn btn-secondary" style="text-decoration:none;margin:5px;">Show My Posts</a>

    <a class="btn btn-warning" style="text-decoration:none;margin:5px;" asp-controller="User" asp-action="EditUser" asp-route-id="@Model.Id">Edit My Profile</a>

    <a class="btn btn-danger" style="text-decoration:none;margin:5px;" asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id">Remove My Profile</a>


</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}